    <div class="card card-body">
        <div class="text-center">
            <h3>Admin Sign Up</h3>
            <i class="fas fa-user-plus" style="font-size: 3rem;"></i>
        </div>
    <form action="/admin/register" method="POST" >
        <div class="form-group">

            <label class="mt-3">Name</label>
            <div class="form"> 
                <span ><i class="fas fa-user" style="border-right: 2px solid #d1d5db; padding-right: 5px;"></i> </span><input type="text" name="name" class="form-control form-input" placeholder="John Doe" required>
            </div>
            
            <label class="mt-3">Email</label>
            <div class="form"> 
                <span ><i class="fas fa-envelope" style="border-right: 2px solid #d1d5db; padding-right: 5px;"></i> </span><input type="email" placeholder="test@test.com" class="form-control form-input" name="email" required>
            </div>

            <label class="mt-3">Phone Number</label>
            <div class="form"> 
                <span ><i class="fas fa-mobile" style="border-right: 2px solid #d1d5db; padding-right: 5px;"></i> </span><input type="text" name="phone" class="form-control form-input" placeholder="08139362969" required>
            </div>

            <label class="mt-3">Date of birth</label>
            <div class="form"> 
                <span ><i class="fas fa-calendar" style="border-right: 2px solid #d1d5db; padding-right: 5px;"></i> </span><input type="date" name="DOB" class="form-control form-input" placeholder="1997/4/28" required>
            </div>

            <label class="mt-3">Password</label>
            <div class="form"> 
                <span ><i class="fas fa-key" style="border-right: 2px solid #d1d5db; padding-right: 5px;"></i> </span><input type="password" placeholder="****" class="form-control form-input" name="password" required>
            </div>

            <label class="mt-3">Confirm Password</label>
            <div class="form"> 
                <span ><i class="fas fa-key" style="border-right: 2px solid #d1d5db; padding-right: 5px;"></i> </span><input type="password" placeholder="****" class="form-control form-input" name="password2" required>
            </div>

            <div>
                <label class="mt-3">Marital Status</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="status" id="inlineRadio1" value="Single" required>
                <label class="form-check-label" for="inlineRadio1">Single</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="status" id="inlineRadio2" value="Married" required>
                <label class="form-check-label" for="inlineRadio2">Married</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="status" id="inlineRadio2" value="Divorced" required>
                <label class="form-check-label" for="inlineRadio2">Divorced</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="status" id="inlineRadio2" value="Widowed" required>
                <label class="form-check-label" for="inlineRadio2">Widowed</label>
            </div>

            <div>
                <label class="mt-3">Gender</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="Male" required>
                <label class="form-check-label" for="inlineRadio1">Male</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="Female" required>
                <label class="form-check-label" for="inlineRadio2">Female</label>
            </div>

            <div>
                <label class="mt-3">Role</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="Academic Staff" required>
                <label class="form-check-label" for="inlineRadio1">Academic Staff</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="role" id="inlineRadio2" value="Non-Academic Staff" required>
                <label class="form-check-label" for="inlineRadio2">Non-Academic Staff</label>
            </div>

            <label class="mt-3">OTP code</label>
            <div class="form"> 
                <span ><i class="fas fa-key" style="border-right: 2px solid #d1d5db; padding-right: 5px;"></i> </span><input type="number" name="OTP" class="form-control form-input" placeholder="******" required>
            </div>

            <input type="submit" class="form-control btn-dark mt-3"  value="Submit">
        </div>
    </form>
